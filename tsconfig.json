{
  "ts-node": {
    "include": ["app/**/*.ts", "types/express/custom.d.ts"],
    "compilerOptions": {
      "typeRoots": ["./types"]
    }
  },
    "compilerOptions": {
      "target": "ES6",                  /* Specify ECMAScript target version */
      "module": "commonjs",             /* Specify module code generation */
      "strict": true,                   /* Enable all strict type-checking options */
      "esModuleInterop": true,          /* Enables interoperability between CommonJS and ES Modules */
      "skipLibCheck": true,             /* Skip type checking of declaration files */
      "forceConsistentCasingInFileNames": true, /* Disallow inconsistently-cased references to the same file */
  
      /* Output directory for compiled files */
      "outDir": "./dist",
  
      /* Use source maps */
      "sourceMap": true,
  
      /* Additional module resolution options */
      "resolveJsonModule": true,        /* Enable import of JSON modules */
  
      /* Strict Type-Checking Options */
      "strictNullChecks": true,         /* Enable strict null checks */
  
      /* Allow default imports from modules with no default export */
      "allowSyntheticDefaultImports": true,
  
      /* Specify the root directory of input files */
      "rootDir": "./app",
  
      /* Type declaration files to be included in compilation */
      "types": ["node"],
  
      /* Allow using decorator and async functions */
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "typeRoots": ["./types"]
    },
  
    /* Specify file and folder inclusion/exclusion patterns */
    "include": ["app/**/*.ts", "types/express/custom.d.ts"],
    "exclude": ["node_modules"],
  }
  